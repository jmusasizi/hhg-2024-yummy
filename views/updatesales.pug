doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Edit Sales - Happy Hoe Grocery Store
    link(rel="stylesheet", href="/css/addstock.css")
    link(rel="stylesheet", href="/css/updatesales.css")
  body
    section.edit-sales-section
      h2 Edit Sales Item
      form.edit-sales-form(action="/update-sales-page", method="POST")
        .form-group
          label(for="product-name") Product Name:
          input#product-name(type="text", name="product-name", value="Maize", required)
        .form-group
          label(for="buying-price") Buying Price (UGX per kg):
          input#buying-price(type="number", name="buying-price", value="5000", required)
        .form-group
          label(for="selling-price") Selling Price (UGX per kg):
          input#selling-price(type="number", name="selling-price", value="6000", required)
        .form-group
          label(for="description") Description:
          textarea#description(name="description", rows="4") Fresh maize, rich in nutrients and locally sourced.
        .form-buttons
          button.save-btn(type="submit") Save Changes
          
