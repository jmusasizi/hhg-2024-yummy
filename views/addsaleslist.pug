doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Add Sales
    link(rel="stylesheet", href="/css/addsales.css")
  body
    .container
      h1 Add Sales
      form(action="#", method="POST")
        .form-group
          label(for="productName") Product Name:
          input#productName(type="text", name="productName", required)
        .form-group
          label(for="quantity") Quantity:
          input#quantity(type="number", name="quantity", required)
        .form-group
          label(for="pricePerUnit") Price Per Kg:
          input#pricePerUnit(type="number", name="pricePerUnit", step="0.01", required)
        .form-group
          label(for="totalAmount") Total Amount:
          input#totalAmount(type="number", name="totalAmount", step="0.01", required)
        .form-group
          button(type="submit") Add Sale
