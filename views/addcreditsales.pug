doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Add Credit Sales
    link(rel="stylesheet", href="assets/css/addcreditsales.css")
  body
    .container
      h1 Add Credit Sales
      form(action="#", method="POST")
        .form-group
          label(for="customerName") Customer Name:
          input#customerName(type="text", name="customerName", required)
        .form-group
          label(for="customerContact") Customer Contact:
          input#customerContact(type="text", name="customerContact", required)
        .form-group
          label(for="itemsPurchased") Items Purchased:
          textarea#itemsPurchased(name="itemsPurchased", rows="4", required)
        .form-group
          label(for="totalAmount") Total Amount:
          input#totalAmount(type="number", name="totalAmount", required)
        .form-group
          button(type="submit") Add Credit Sale
